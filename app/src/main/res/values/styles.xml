<resources>

    <!--Tema da splash screen-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/azul_marinho</item>
        <item name="colorPrimaryDark">@color/azul_marinho</item>
        <item name="colorAccent">@color/azul_marinho</item>
    </style>

    <!--Tema da aplicação-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/rosa_claro</item>
        <item name="colorPrimaryDark">@color/rosa_claro</item>
        <item name="colorAccent">@color/rosa_claro</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
    </style>

    <!--Fonte da aplicação-->
    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Constantia.ttf</item>
    </style>

</resources>
