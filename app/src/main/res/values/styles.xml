<resources>

    <!--Tema da splash screen-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/azul_marinho</item>
        <item name="colorPrimaryDark">@color/azul_marinho</item>
        <item name="colorAccent">@color/azul_marinho</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!--Tema da aplicação-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/rosa_claro</item>
        <item name="colorPrimaryDark">@color/rosa_claro</item>
        <item name="colorAccent">@color/rosa_escuro</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
